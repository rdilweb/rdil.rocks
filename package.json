{
    "name": "rdil.rocks",
    "private": true,
    "scripts": {
        "build": "run-s clean build:root build:cherry build:docs assemble",
        "build:root": "yarn workspace root build",
        "build:cherry": "yarn workspace cherry build",
        "build:docs": "yarn workspace docs build",
        "start:root": "yarn workspace root start",
        "start:cherry": "yarn workspace cherry start",
        "start:docs": "yarn workspace docs start",
        "start": "echo PLEASE USE start:root, start:cherry, or start:docs",
        "assemble": "node assemble",
        "prettier": "prettier --write **/*.{js,jsx,ts,tsx,css,yml,md,html,json}",
        "clean": "rimraf build"
    },
    "dependencies": {
        "fs-extra": "^9.1.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "4.1.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.6",
        "@types/node": "^14.14.22",
        "prettier": "^2.2.1"
    },
    "prettier": {
        "semi": false,
        "tabWidth": 4
    },
    "workspaces": [
        "cherry",
        "root",
        "docs"
    ]
}
